<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:padding="16dp"
        android:radius="26dp">
        <ImageView
            android:id="@+id/favoriteclosebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="top"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tags"
            android:fontFamily="@style/TextStyle_Label"
            android:textColor="@color/background"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:id="@+id/makgeolliName"
            android:text="MakgeolliName"
            style="@style/TextStyle_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="2dp"
              />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">



        <LinearLayout
            android:id="@+id/folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="4dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">


            <LinearLayout
                android:id="@+id/ratingStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sweet"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/sweet"
                        style="@style/TextStyle_Body" />

                    <RatingBar
                        android:id="@+id/ratingBarSweet"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:numStars="5"
                        android:rating="2.0"
                        android:stepSize="1.0"
                        style = "?android:attr/ratingBarStyleSmall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/acidity"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/acidity"
                        style="@style/TextStyle_Body" />
                    <RatingBar
                        android:id="@+id/ratingBarAcidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:rating="2.0"
                        style = "?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/texture"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/texture"
                        style="@style/TextStyle_Body" />

                    <RatingBar
                        android:id="@+id/ratingBarTexture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="2.0"
                        android:stepSize="1.0"
                        style = "?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sparkling"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/sparkling"
                        style="@style/TextStyle_Body" />
                    <RatingBar
                        android:id="@+id/ratingBarSparkling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:rating="2.0"
                        style = "?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/marker"
            android:id="@+id/bottleImg"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >



        <LinearLayout
            android:id="@+id/percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:layout_marginTop="10sp">



            <TextView
                android:id="@+id/percentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="10dp"
                style="@style/TextStyle_Body"
                android:text="@string/alcool_percentage"/>

            <TextView
                android:id="@+id/percentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextStyle_BodySmall"
                android:text="..."/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/ingredientTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextStyle_Body"
                android:layout_marginEnd="10dp"
                android:text="@string/ingredients"/>

            <TextView
                android:id="@+id/ingredientText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"

                style="@style/TextStyle_BodySmall"
                android:text=".."/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/localisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">



            <TextView
                android:id="@+id/localisationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextStyle_Body"
                android:text="@string/localisation"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/localisationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"

                style="@style/TextStyle_BodySmall"
                android:text="..."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:layout_marginTop="10sp">


            <TextView
                android:id="@+id/moreInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                style="@style/TextStyle_Body"
                android:text="@string/more_infos"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/moreInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/TextStyle_BodySmall"
                android:text="..."/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>