<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:backgroundTint="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:layout_gravity="center"
    app:cardCornerRadius="26dp"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/modalBottomSheetContainer"
    android:padding= "20dp"
    app:behavior_hideable="false"
    app:behavior_draggable="true"
    android:background="@color/surface">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:layout_gravity="end"
        android:contentDescription="@string/app_name"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">
        <TextView
            android:id="@+id/makgeolliName"
            android:text="MakgeolliName"
            style="@style/TextStyle_Title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="2dp"/>

        <ImageButton
            android:id="@+id/favorisbtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/btn_star_big_off"
            android:background="@color/surface"/>
    </LinearLayout>


    <LinearLayout
android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">



<LinearLayout
android:id="@+id/folder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="4dp"
    android:gravity="start|center_vertical"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">


        <LinearLayout
            android:id="@+id/ratingStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sweet"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sweet"
                    style="@style/TextStyle_Body" />

                <RatingBar
                    android:id="@+id/ratingBarSweet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:numStars="5"
                    android:rating="2.0"
                    android:stepSize="1.0"
                    style = "?android:attr/ratingBarStyleSmall" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/acidity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/acidity"
                    style="@style/TextStyle_Body" />
                <RatingBar
                    android:id="@+id/ratingBarAcidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="2.0"
                    style = "?android:attr/ratingBarStyleSmall"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/texture"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/texture"
                    style="@style/TextStyle_Body" />

                <RatingBar
                    android:id="@+id/ratingBarTexture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2.0"
                    android:stepSize="1.0"
                    style = "?android:attr/ratingBarStyleSmall"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sparkling"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sparkling"
                    style="@style/TextStyle_Body" />
                <RatingBar
                    android:id="@+id/ratingBarSparkling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="2.0"
                    style = "?android:attr/ratingBarStyleSmall"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/marker"
        android:id="@+id/bottleImg"/>

</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <LinearLayout
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables"
        android:layout_marginTop="10sp">



            <TextView
                android:id="@+id/percentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="10dp"
                style="@style/TextStyle_Body"
                android:text="@string/alcool_percentage"/>

        <TextView
            android:id="@+id/percentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextStyle_BodySmall"
            android:text="..."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">



        <TextView
            android:id="@+id/ingredientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextStyle_Body"
            android:layout_marginEnd="10dp"
            android:text="@string/ingredients"/>

        <TextView
            android:id="@+id/ingredientText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"

            style="@style/TextStyle_BodySmall"
            android:text=".."/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/localisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">



        <TextView
            android:id="@+id/localisationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextStyle_Body"
            android:text="@string/localisation"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/localisationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"

            style="@style/TextStyle_BodySmall"
            android:text="..."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/moreInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextStyle_Body"
            android:text="@string/more_infos"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/moreInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/TextStyle_BodySmall"
            android:text="..."/>
    </LinearLayout>

    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>